{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "shared/*": [
        "./src/shared/*"
      ],
      "desktop/*": [
        "./src/desktop/*"
      ],
      "mobile/*": [
        "./src/mobile/*"
      ]
    }
  },
  "include": ["vite.config.ts"]
}
